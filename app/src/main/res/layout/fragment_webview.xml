<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/webview_url"
              android:textSize="@dimen/network_type_size"
              android:id="@+id/wv_url"
              android:background="@android:color/darker_gray"
    />

    <Spinner android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/sp_webview"
             android:layout_below="@id/wv_url"
    />

    <WebView android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_below="@id/sp_webview"
             android:id="@+id/wv_page"
             android:layout_marginTop="@dimen/margin_top"
    />

</RelativeLayout>
